  <script>
    // Дата обновления (локально в браузере)
    document.getElementById('updated').textContent = new Date().toLocaleDateString('ru-RU', {year:'numeric', month:'long', day:'numeric'});

    // Небольшой эффект появления карточек
    const io = new IntersectionObserver((entries)=>{
      entries.forEach(e=>{
        if(e.isIntersecting){ e.target.animate([
          {opacity:0, transform:'translateY(10px)'},
          {opacity:1, transform:'translateY(0)'}
        ], {duration:450, easing:'ease-out', fill:'forwards'}); io.unobserve(e.target); }
      })
    }, {threshold:.12});
    document.querySelectorAll('.card, .hero__card').forEach(el=> io.observe(el));
  </script>
